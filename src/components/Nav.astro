---
import { Terminal } from "lucide-astro";

export interface Props {
  currentPage?: "about" | "blog";
}

const { currentPage } = Astro.props;
---

<nav class="fixed top-0 z-50 w-full border-b border-neutral-200/50 bg-neutral-50/70 backdrop-blur-md">
  <div class="mx-auto flex h-16 max-w-xl items-center justify-between px-6">
    <a
      href="/"
      class="flex items-center gap-2 font-mono text-base font-bold tracking-tight hover:opacity-70"
    >
      <span class="rounded bg-black p-1 text-white">
        <Terminal size={14} />
      </span>
      briete.me
    </a>
    <div class="flex gap-4 text-xs font-medium text-neutral-500">
      <a
        href="/"
        class={`transition-colors hover:text-black ${currentPage === "about" ? "text-black" : ""}`}
      >
        About
      </a>
      <a
        href="/blog"
        class={`transition-colors hover:text-black ${currentPage === "blog" ? "text-black" : ""}`}
      >
        Blog
      </a>
    </div>
  </div>
</nav>

